<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MdLabelDemo"
             xmlns:md="clr-namespace:MdLabel.Spans;assembly=MdLabel"
             x:Class="MdLabelDemo.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Styles/Markdown.xaml;assembly=MdLabel" />
                <ResourceDictionary>
                    <Style x:Key="Header1StyleBase" TargetType="Span"></Style>
                    <Style TargetType="local:TestHeader1Span" BasedOn="{StaticResource Header1StyleBase}">
                        <Setter Property="FontSize" Value="24"></Setter>
                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Blue100Accent}, Dark={StaticResource Cyan100Accent}}"></Setter>
                    </Style>

                    <!--<Style x:Key="MarkdownHeaderStyleBase" TargetType="md:MarkdownHeaderSpanBase">
                        <Setter Property="TextColor" Value="Red"></Setter>
                    </Style>-->
                    
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
