                        </Style>

                        <Style TargetType="Span" x:Key="Header3SpanStyle">
                            <Setter Property="FontSize" Value="12"></Setter>
                        </Style>
                    </ResourceDictionary>

                </md:MarkdownLabel.Resources>


            </md:MarkdownLabel>

